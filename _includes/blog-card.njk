<li class="kimBlogCard" itemprop="blogPost" itemscope itemtype="https://schema.org/BlogPosting">
  <time class="kimBlogCard_date" datetime="{{ post.date | formatDate('iso') }}" itemprop="dateCreated">
    {{- post.date | formatDate('human') -}}
  </time>
  <strong class="kimHeading-m kimBlogCard_heading">
    <a class="kimBlogCard_link" href="{{ siteDomain }}{{ post.url | url }}" itemprop="url">
      <span itemprop="name">
        {{- post.data.title -}}
      </span>
    </a>
  </strong>
</li>