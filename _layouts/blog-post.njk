{% extends '_layouts/layout.njk' %}

{% block main %}
  <div class="kim-!-padding-top-9 kim-!-padding-bottom-9">
    <div class="kimWrapper">
      <article>
        <h1 class="kimHeading-xl">
          {{ title }}
        </h1>
        <div class="kim-!-margin-bottom-5">
          <time class="kimBody-l" datetime="{{ date | htmlDateString }}">
            {{ date | readableDate }}
          </time>
        </div>
        <div class="kimGrid">
          <div class="kimGrid_column kimGrid_column-full defiant:kimGrid_column-twoThirds kimProse">
            {{ content | smartquotes | safe }}
          </div>
        </div>
      </article>
    </div>
  </div>
{% endblock %}