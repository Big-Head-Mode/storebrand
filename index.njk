  <script>
    // Funky letter swapping fun
    (() => {
      const $logo = document.querySelector(".kimMasthead_switcheroo");
      const children = $logo.children;
      const effects = ['text', 'flipX', 'flipY', 'flipZ'];
      const getRandom = (arr) => {
        return arr[Math.floor(Math.random() * arr.length)];
      }
      const addRandomEffect = () => {
        const $child = getRandom(children);
        $child.classList.add(getRandom(effects));
      };
      const removeRandomEffect = () => {
        const $child = getRandom(children);
        $child.classList.remove(getRandom($child.classList));
      }
      const changeSomething = () => {
        const functions = [addRandomEffect, removeRandomEffect];
        getRandom(functions)();
      }
      setInterval(changeSomething, 100);
    })();
  </script>
