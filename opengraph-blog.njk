---
pagination:
  data: collections.blog
  size: 1
  alias: preview
permalink: "/images/opengraph/{{ preview.data.date | htmlDateString }}-{{ preview.data.title | slugify }}.svg"
eleventyExcludeFromCollections: true
---
{%- set titleLines = preview.data.title | splitlines(20) -%}
<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="1200" height="628" viewBox="0 0 1200 628" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">

  <!-- Background -->
  <rect width="100%" height="100%" fill="#1c1924" />
  <polygon fill="#786999" points="1200,0 1200,628 800,628 1000,0" />
  
  <!-- Heading -->
  <text text-anchor="start" font-family="'Space Mono', monospace" font-size="80" font-weight="bold" fill="#ff0090">
      <tspan x="60" y="140">beeps:</tspan>
  </text>
  
  <!-- Post name -->
  <text text-anchor="start" font-family="'Space Mono', monospace" font-size="60" line-spacing="70" fill="#ffffff">
    {%- for line in titleLines %}
      <tspan x="60" y="{{ 225 + loop.index0 * 70 }}">{{ line }}</tspan>
    {%- endfor %}
  </text>
  
  <!-- Post date -->
  <text text-anchor="start" font-family="'Space Mono', monospace" font-size="40" fill="#ffffff">
    <tspan x="60" y="540">{{ preview.date | readableDate }}</tspan>
  </text>
  
  <!-- TODO: Robat -->
  
</svg>