{%- if site.environment == "dev" %}
  <details id="dev-tag">
    <summary id="dev-tag__label">
      <span>Development</span>
    </summary>
    <div>
      <code>page</code>
      <textarea>{{ page | dump }}</textarea>
      <code>site</code>
      <textarea>{{ site | dump }}</textarea>
      <code>eleventy</code>
      <textarea>{{ eleventy | dump }}</textarea>
    </div>
  </details>

  <style>
    #dev-tag {
      position: absolute;
      top: 0;
      left: 0;
      z-index: 9999;
    }
    #dev-tag[open] {
      position: static;
      width: 100%;
      background-color: red;
    }
    #dev-tag summary { list-style: none; }
    #dev-tag summary::-webkit-details-marker { display: none; }
    #dev-tag summary span  {
      padding: .25em 1em .25em .5em;
      color: white;
      background-color: red;
      font-size: smaller;
      font-weight: bold;
      text-transform: uppercase;
      clip-path: polygon(0 0, 100% 0, calc(100% - .5em) 100%, 0 100%);
      cursor: pointer;
    }
    #dev-tag div {
      display: grid;
      grid-template-columns: 8em 1fr;
      gap: .5em;
      padding: .5em;
    }
    #dev-tag textarea {
      width: 100%;
      height: 10em;
      resize: vertical;
    }
  </style>
{%- endif %}