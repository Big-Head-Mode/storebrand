<!doctype html>
<html lang="en-GB">
<head>

  {#- Technical metadata #}
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="generator" content="Eleventy">
  
  {#- Page title #}
  <title>{% if title or metadata.title %}{{ title or metadata.title }} &larr; {% endif %}{{ siteName }}</title>
  
  {#- SEO metadata #}
  <link rel="canonical" href="{{ siteDomain }}{{ page.url}}">
  <meta property="og:title" content="{{ title or metadata.title }}">
  <meta property="og:site_name" content="beeps">
  <meta property="og:url" content="{{ siteDomain }}{{ page.url | url }}">
  <meta property="og:type" content="website">
  <meta property="og:image" content="{{ siteDomain }}{{ '/images/opengraph/default.png' | url }}">
  <meta property="og:locale" content="en_GB">
  {%- if description or metadata.description %}
    <meta name="description" content="{{ description or metadata.description }}">
    <meta property="og:description" content="{{ description or metadata.description }}">
  {%- endif %}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@batbeeps">
  <meta name="twitter:creator" content="@batbeeps">
  {%- if noRobots %}
    <meta name="robots" content="noindex, nofollow">
  {%- endif %}
  
  {#- Theming/icons #}
  <meta name="theme-color" content="#FFD447">
  <link rel="icon" type="image/png" sizes="32x32" href="{{ '/favicon-32x32.png' | url | cachebust }}">
  <link rel="icon" type="image/png" sizes="16x16" href="{{ '/favicon-16x16.png' | url | cachebust }}">
  <link rel="mask-icon" href="{{ '/safari-pinned-tab.svg' | url | cachebust }}" color="#FFD447">
  <link rel="apple-touch-icon" sizes="180x180" href="{{ '/apple-touch-icon.png' | url | cachebust }}">
  <link rel="manifest" href="{{ '/site.webmanifest' | url | cachebust }}">
  <link rel="shortcut icon" href="{{ '/favicon.ico' | url | cachebust }}">
  
  {#- Page-specific head content #}
  {% block head %}{% endblock %}
  
</head>
<body>
  
  {% block beforeMasthead %}{% endblock %}
  {% block masthead %}{% endblock %}
  {% block afterMasthead %}{% endblock %}

  {% block main %}{% endblock %}
  
  {% block beforeFooter%}{% endblock %}
  {% block footer %}{% endblock %}
  {% block afterFooter %}{% endblock %}
  
  {# Other scripts #}
  {% block scripts %}{% endblock %}
  
</body>
</html>